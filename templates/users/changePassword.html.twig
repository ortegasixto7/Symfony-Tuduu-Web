{% extends 'base.html.twig' %}
{% block title %}Change Password - {% endblock %}

{% block body %}
<div class="container">
  <h1 class="center-align">Tuduu</h1>
  <div class="row">
    <div class="col s12 m6 offset-m3 l6 offset-l3">
      <div class="card-panel hoverable">
        <h4 class="center-align">Change Password</h4>
        <div class="row">
          <form action="index.html" class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input id="input-new-password" type="password" />
                <label for="input-new-password">New Password</label>
              </div>
            </div>
            <button
              class="btn waves-effect waves-light"
              type="submit"
              name="action"
              style="width: 100%;"
            >
              Change
            </button>
            <br />
            <br />
            <a
              href="{{path('users.login')}}"
              class="btn waves-effect waves-light blue-grey lighten-1"
              style="width: 100%;"
              >Cancel</a
            >
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}